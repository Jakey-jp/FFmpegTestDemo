<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="always"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/label_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FFmpeg information test" />

    <Button
        android:id="@+id/button_urlprotocol"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignLeft="@+id/label_info"
        android:layout_below="@+id/label_info"
        android:text="Protocol" />

    <Button
        android:id="@+id/button_avformat"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/label_info"
        android:layout_toRightOf="@+id/button_urlprotocol"
        android:text="Format" />

    <Button
        android:id="@+id/button_avcodec"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/label_info"
        android:layout_toRightOf="@+id/button_avformat"
        android:text="Codec" />

    <Button
        android:id="@+id/button_avfilter"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/label_info"
        android:layout_toRightOf="@+id/button_avcodec"
        android:text="Filter" />

    <Button
        android:id="@+id/button_configuration"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignLeft="@+id/button_urlprotocol"
        android:layout_below="@+id/button_urlprotocol"
        android:text="Configuration" />

    <TextView
        android:id="@+id/text_libinfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_configuration"
        android:layout_below="@+id/button_configuration"
        android:isScrollContainer="true"
        android:text="info" 
        android:scrollbars="vertical"
        />

</RelativeLayout>